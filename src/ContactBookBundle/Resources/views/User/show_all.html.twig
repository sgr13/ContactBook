{% extends 'base.html.twig' %}

{% block body %}
    <h1 id="main">Lista kontaktów</h1>
    <table class="table" id="mainTable">
        <thead>
        <tr>
            <th>Id</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Opis</th>
            <th>Działania</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users|reverse(true) %}
            <tr>
                <td><a href="{{ path('userShow', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.description }}</td>
                <td>

                    <a href="{{ path('userShow', { 'id': user.id }) }}">
                        <button type="button" class="btn btn-success">Pokaż</button>
                    </a>

                    <a href="{{ path('userEdit', { 'id': user.id }) }}">
                        <button type="button" class="btn btn-info">Edytuj</button>
                    </a>

                    <a href="{{ path('userDelete', { 'id': user.id }) }}">
                        <button type="button" class="btn btn-danger">Usuń</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('userNew') }}">
                <button>Dodaj nowy kontakt</button>
            </a>
        </li>
    </ul>
{% endblock %}